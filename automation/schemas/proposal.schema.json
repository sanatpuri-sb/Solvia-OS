{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Solvia Proposal",
    "type": "object",
    "required": [
        "title",
        "rationale",
        "linked_metrics",
        "risk",
        "changes",
        "rollback",
        "acceptance_criteria"
    ],
    "properties": {
        "title": {
            "type": "string",
            "minLength": 3
        },
        "rationale": {
            "type": "string",
            "minLength": 3
        },
        "linked_metrics": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "risk": {
            "type": "string",
            "enum": [
                "low",
                "medium",
                "high"
            ]
        },
        "changes": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "file",
                    "type",
                    "preview"
                ],
                "properties": {
                    "file": {
                        "type": "string",
                        "minLength": 1
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "add",
                            "edit",
                            "delete"
                        ]
                    },
                    "preview": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "additionalProperties": false
            }
        },
        "tests_added": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "rollback": {
            "type": "string",
            "minLength": 3
        },
        "acceptance_criteria": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string"
            }
        }
    },
    "additionalProperties": false
}