{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "beliefs"
    ],
    "properties": {
        "beliefs": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "statement",
                    "confidence"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "^B-[0-9]{4}"
                    },
                    "statement": {
                        "type": "string"
                    },
                    "confidence": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 1
                    }
                }
            }
        }
    }
}